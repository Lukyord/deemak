<section data-section="homepage-info">
  <div class="sc-inner">
    <div class="container xl">
      <div class="content">
        <div class="heading">
          <div class="sc-header vertical">
            <div class="sc-ttl animate fadeIn">
              <h2>Your Oasis of<br />Relaxation</h2>
            </div>

            <a href="/about" class="button animate fadeIn">
