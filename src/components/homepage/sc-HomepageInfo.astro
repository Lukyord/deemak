            >
          </div>

          <div class="heading-image animate fadeIn">
            <Media
              cover={"/media/index-info.webp"}
              coverMobile={"/media/index-info-mb.webp"}
              coverType="object-fit"
              alt="Deemak Thai Massage Information picture"
              title="Deemak Thai Massage"
            />
          </div>
        </div>
        <div class="info">
          {
            info.map((item) => (
              <div class="card animate fadeIn" data-card="index-info">
                <div class="card-content">
                  <div class="card-ttl">
                    <h4>{item.ttl}</h4>
                  </div>
                  <div class="card-des">
                    <p>{item.desc}</p>
                  </div>
                </div>

                <div class="card-svg" set:html={item.svg} />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
